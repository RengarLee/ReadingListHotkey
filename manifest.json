{
  "manifest_version": 3,
  "name": "Add to Reading List",
  "version": "1.0",
  "description": "Adds the current page to the reading list with a shortcut.",
  "permissions": [
    "readingList",
    "tabs",
    "activeTab"
  ],
  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "commands": {
    "add-to-reading-list": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      },
      "description": "Add the current page to the reading list"
    },
    "remove-from-reading-list": {
      "suggested_key": {
        "default": "Ctrl+Period",
        "mac": "Command+Period"
      },
      "description": "Remove the current page from the reading list"
    },
    "mark-as-read": {
      "suggested_key": {
        "default": "Ctrl+Comma",
        "mac": "Command+Comma"
      },
      "description": "Mark the current page as read in the reading list"
    }
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Add to Reading List",
    "default_icon": "icon.png"
  }
}
